# Development environment configuration
NODE_ENV=development
DEBUG=true
LOG_LEVEL=debug

# Database settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=myapp_dev
DB_USER=developer
DB_PASSWORD=dev_password
DATABASE_URL="postgres://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}"

# Redis
REDIS_URL=redis://localhost:6379

# API Configuration
API_PORT=3000
API_HOST=0.0.0.0
API_BASE_URL="http://${API_HOST}:${API_PORT}"

# External services
EXTERNAL_API_KEY=dev-api-key-123
EXTERNAL_API_URL=https://api.development.example.com

# Feature flags
ENABLE_NEW_FEATURE=true
ENABLE_ANALYTICS=false
ENABLE_DEBUG_TOOLBAR=yes

# File paths
UPLOAD_DIR=/tmp/uploads
LOG_DIR=/var/log/myapp

# Security
JWT_SECRET=dev-jwt-secret-not-for-production
ENCRYPTION_KEY=dev-encryption-key-32-chars-long

# Email (development - use mailtrap or similar)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your_mailtrap_user
SMTP_PASS=your_mailtrap_pass

# Misc
APP_NAME="My Awesome App (Dev)"
WELCOME_MESSAGE="Welcome to the development environment!\nHappy coding!"
